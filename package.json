{
  "name": "merav-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "start:dev": "ts-node-dev --files --transpile-only --respawn --inspect=4321 --project tsconfig.json ./src/app.ts",
    "start:prod": "rm -rf dist && tsc && yarn db:migrate:up && node ./dist/app.js",
    "prebuild": "rm -rf dist",
    "build": "tsc && cp -r ./src/templates ./dist",
    "start": "node ./dist/app.js",
    "db:migrate": "node-pg-migrate --migrations-dir='./src/db/migrations' --tsconfig=./tsconfig.json --migrations-table='schema_migrations'",
    "db:migrate:up": "node-pg-migrate up --no-check-order --migrations-dir='./src/db/migrations' --tsconfig=./tsconfig.json --migrations-table='schema_migrations'"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "html-to-text": "^9.0.5",
    "knex": "^2.1.0",
    "libphonenumber-js": "^1.10.31",
    "lodash": "^4.17.21",
    "node-pg-migrate": "^6.2.1",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.41",
    "@types/pg": "^8.6.5",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.2"
  }
}
